<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), wrapper: "horizontal_form", :html => { :class => 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.input :email, autofocus: true, input_wrapper_html: { class: "col-xs-4" } %>

  <%= f.input :password, autocomplete: "off", input_wrapper_html: { class: "col-xs-4" } %>

  <%= f.input :password_confirmation, autocomplete: "off", input_wrapper_html: { class: "col-xs-4" } %>

  <%= f.button :submit, :class => 'btn-primary' %>
<% end %>

<%= render "devise/shared/links" %>
