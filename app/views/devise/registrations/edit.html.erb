<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, wrapper: "horizontal_form", :html => { :class => 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

    <%= f.input :email, autofocus: true, input_wrapper_html: { class: "col-xs-4" } %>

    <%= f.input :password, autocomplete: "off", input_wrapper_html: { class: "col-xs-4" } %>

    <%= f.input :password_confirmation, autocomplete: "off", input_wrapper_html: { class: "col-xs-4" } %>

    <%= f.input :current_password, autocomplete: "off", input_wrapper_html: { class: "col-xs-4" } %>

    <%= f.input :first_name, input_wrapper_html: { class: "col-xs-4" } %>

    <%= f.input :last_name, input_wrapper_html: { class: "col-xs-4" } %>

    <%= f.input :age, input_wrapper_html: { class: "col-xs-4" } %>

    <%= f.input :sex, collection: [["male", 1],["female", 2],["ather", 3]], as: :radio_buttons, item_wrapper_class: "inline" %>

    <%= f.button :submit, :class => 'btn-primary' %>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
