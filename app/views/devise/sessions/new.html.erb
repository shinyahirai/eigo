<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), wrapper: "horizontal_form", :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.input :email, autofocus: true, input_wrapper_html: { class: "col-xs-4" } %>

  <%= f.input :password, autocomplete: "off", input_wrapper_html: { class: "col-xs-4" } %>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.input :remember_me, :as => :boolean, checked:false %>
    </div>
  <% end -%>

  <%= f.button :submit, :class => 'btn-primary' %>
<% end %>

<%= render "devise/shared/links" %>
